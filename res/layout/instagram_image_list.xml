<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  

  <ListView
    android:id="@+id/list_instagram_image"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8" />
<!--   
  <ListView
    android:id="@+id/list_instagram_image_tile"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8" />
  <ListView
    android:id="@+id/list_instagram_image_detail"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8" />
 -->
 
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:layout_weight="1">
    
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:background="#696969">
      <Button
        android:id="@+id/button_feed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1px"
        android:text="@string/button_feed"
        android:textSize="12dip" />
    </LinearLayout>
    
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:background="#696969">
      <Button
        android:id="@+id/button_popular"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1px"
        android:text="@string/button_popular"
        android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:background="#696969">
      <Button
        android:id="@+id/button_prayforjapan1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1px"
        android:text="#prayforjapan"
        android:textSize="12dip" />
    </LinearLayout>
    
  </LinearLayout>

</LinearLayout>
